 <%= form_tag "/users/", :method => 'get' do %>
<div class="control-group" style="float:left;">
      <label class="control-label" style="text-align:left; float:left; padding:0px 0px; 30px 0px">Account Name </label><div class="controls" style="float:left;  padding:0px 30px; 30px 0px" >
<%= select_tag :search, options_from_collection_for_select(Account.all, "id", "ac_name") , {:prompt => 'ALL'} %></div>
<div class="controls"  >
<%= submit_tag "Search", :name => nil , :class => "btn btn-success" , style: "margin-left:125px;"%>
</div></div>
<% end %>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Role</th>
      <th>Enable</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
      <%= form_for user do |f| %>
      <td><%= f.check_box :is_active %></td>
      <td><%= f.submit "Update", class: "btn btn-mini btn-info" %></td>
      <% end %>
      <td>
        <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
        <%= render user %>
      </td>
      <td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini btn-danger') unless user == current_user %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
<div class='apple_pagination' align="center"><%= will_paginate  @users, :container => false %></div>