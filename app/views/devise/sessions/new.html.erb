<br> 
<div class="row">
  
  <div class="span6 offset5">
    <div style="width:400px;border-radius:5px;border:1px solid #ddd;box-shadow: 1px 1px 2px 1px;padding: 10px 70px 10px 70px;>
      <h2  align="center"></h2>
      <br/>
      <div style="position:relative;padding:15px">
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
        <table style="margin-left:-45px;">
          <tr>
            <td>
             <div style="margin-top:20px;">
              <%= f.error_notification %>
              <%= display_base_errors resource %>
              <%= f.input :email, input_html: { class: 'devics' }, :autofocus => true %>
              <%= f.input :password %>
              <%= f.button :submit, "Sign in", :class => 'btn-primary btn-success' %> 
            </div>
          </td>


          <td style="float:left;width:auto;background-repeat:no-repeat;background-image:url('../assets/verticle_line.jpg');background-position: center;background-size: 2px 100%;">
           <div style="margin: 70px 20px;"> <%= image_tag("or.png", :size => "200x200", :alt => "") %> </div>
         </td>
         <td>

          <div style="margin-left:10px;margin-top:5px;">

           <%= link_to image_tag("loginfacebook.png",:class => "login_img", alt: ""), user_omniauth_authorize_path(:facebook) %>
           <br>
           Facebook
           <br><br>
           <%= link_to image_tag("Google_Logo.jpg", :class => "login_img", alt: ""), user_omniauth_authorize_path(:google_oauth2) %>
           <br>
           Google
           <br><br>
           <%= link_to image_tag("login-linkedin.png", :class => "login_img", alt: ""), user_omniauth_authorize_path(:linkedin) %>
           <br>
           LinkedIn
         </div>
       </td>
     </tr>
   </table>
   <% end %>
 </div>
 
</div>

</div>
</div>

