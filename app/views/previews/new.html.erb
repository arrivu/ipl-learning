<br>
<div class="row">
	<div class="span12 offset3">
		<ul class="nav nav-pills .pull-left">
			<li >
				<%= link_to "Users", users_path %>
			</li><li>
			<%= link_to "New Course Library", new_course_path %></li>
			<li><%= link_to "Manage Course Library", manage_courses_path %></li>
			<li><%= link_to "New Category",new_topic_path %></li>			
			<li><%= link_to "Manage Category", topics_path %></li>
			<li class="active"><%= link_to "New Preview",new_preview_path %></li>
			<li><%= link_to "Manage Preview",previews_path %></li>
		</ul>

		<div class="row">
			<div class="span10 ">
				<div class = "hero-unit">
					<table class="table table-hover ">
						<tr>
							<h3 align = "center">New Preview</h3>
						</tr>
						<%= form_for @preview do |f| %>
						<% @preview.errors.full_messages.each do |msg| %>
						<p><%= msg %></p>
						<% end %>
						<tr><td><%= f.label :course_id, "Courses" %></td>
							<td><%= f.select(:course_id, @course.collect {|p| [ p.title,p.id ] })%></td></tr>
							<tr><td><%= f.label :name, "Title" %></td>
								<td><%= f.text_field :name,:maxlength => 15 %></td></tr>
								<tr><td><%= f.label :desc, "Description" %></td>
									<td><%= f.text_area :desc ,:cols => "30", :rows => "5",:maxlength => 50 %></td></tr>
									<tr><td><%= f.label :video_url, "Video URL" %></td>
										<td><%= f.text_area :video_url ,:cols => "30", :rows => "3" %></td></tr>										
										<tr><td><%= f.label :sequence, "Display Order" %></td>
											<td><%= f.text_field :sequence ,:size => '2' %></td></tr>
											<tr><td><%= f.label :enable, "Show This Preview" %></td>
												<td><%= f.check_box :enable ,:checked => true%></td></tr>
												<tr><td></td><td><%= f.submit "Add Preview", class: "btn btn-large btn-primary" %></td></tr>
											</table>
											<% end %>

										</div>
									</div>
								</div>
							</div>
						</div>
